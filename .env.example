# Required API Keys
REACT_APP_OPENAI_API_KEY=your_openai_api_key_here

# Optional (but recommended) AI Service Keys
REACT_APP_ANTHROPIC_API_KEY=your_anthropic_api_key_here
REACT_APP_PERPLEXITY_API_KEY=your_perplexity_api_key_here
REACT_APP_SEMRUSH_API_KEY=your_semrush_api_key_here

# AI SEO Service Configuration
REACT_APP_ENABLE_AI_SEO_SERVICE=true

# Go High Level API Configuration (REQUIRED for user authentication)
# These credentials are essential for the authentication system to work
# Without them, user verification and creation will fail
REACT_APP_GHL_API_URL=https://rest.gohighlevel.com/v1
REACT_APP_GHL_API_KEY=your_ghl_api_key_here
REACT_APP_GHL_LOCATION_ID=your_ghl_location_id_here

# GoHighLevel OAuth Configuration (Optional - for OAuth login)
# Required only if you want to enable "Sign in with GoHighLevel" button
REACT_APP_GHL_OAUTH_CLIENT_ID=your_oauth_client_id_here
REACT_APP_GHL_OAUTH_CLIENT_SECRET=your_oauth_client_secret_here
REACT_APP_GHL_OAUTH_REDIRECT_URI=http://localhost:3000/auth/callback

# Optional: GHL Webhook Secret for secure webhook handling
REACT_APP_GHL_WEBHOOK_SECRET=your_webhook_secret_here

# IMPORTANT: Create these tags in GoHighLevel:
# - siteoptz-plan-free
# - siteoptz-plan-starter
# - siteoptz-plan-pro
# - siteoptz-plan-enterprise

# Optional: SSO Secret Key for Cyfe integration
REACT_APP_SSO_SECRET_KEY=your_sso_secret_key_here